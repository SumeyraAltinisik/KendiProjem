@model IEnumerable<Artist>
@{
    ViewData["Title"] = "Index";
}

<a asp-action="Create">Create an Artists</a>
<h2>Here is the list of Artists</h2>
<table style="width:50%">
    <thead>
        <tr>
            <th>ArtistId</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Artist e in Model)
        {
            <tr>
                <td>@e.ArtistId</td>
                <td>@e.Name</td>
               @* <td><a asp-action="Update" asp-route-empname="@e.Name">Update</a></td>*@
               @* <td><a asp-action="AlbumsByArtist" asp-route-empname="@e.ArtistId">Detay</a></td>*@
                <td>
                    <a asp-controller="Artist"
               asp-action="AlbumsByArtist"
               asp-route-level="Name"
               asp-route-type="Title"
               asp-route-id="@e.ArtistId">Albüm Detay</a>
                </td>
            </tr>
        }
    </tbody>
</table>

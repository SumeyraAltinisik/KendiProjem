@model IEnumerable<Album> 
@{
    ViewData["Title"] = "AlbumsByArtist";
}
<h2>AlbumsByArtist</h2>

<table style="width:50%">
    <thead>
        <tr>
            <th>AlbumId</th>
            <th>ArtistId</th>           
            <th>Artist Name</th>           
            <th>Title</th>      
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Album e in Model)
        {
            <tr>
                <td>@e.AlbumId</td>     
                <td>@e.Artist.ArtistId</td>
                <td>@e.Artist.Name</td>
                <td>@e.Title</td>  
                <td><a asp-action="Update" asp-route-empname="@e.Title">Update</a></td>
            </tr>
        }
    </tbody>
</table>